<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/ingredients_view">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back "
        android:id="@+id/backBttn"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffad112b"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Header"
        android:id="@+id/textView19"
        android:background="#ffa90524"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="36dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Cost:"
        android:id="@+id/textView20"
        android:layout_alignBottom="@+id/backBttn"
        android:layout_toRightOf="@+id/backBttn"
        android:layout_toEndOf="@+id/backBttn"
        android:layout_marginLeft="97dp"
        android:layout_marginStart="97dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1250 kr"
        android:id="@+id/txtBox_TotalCost"
        android:layout_alignTop="@+id/textView20"
        android:layout_toRightOf="@+id/textView20"
        android:layout_toEndOf="@+id/textView20" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgBttn_Ingredients"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/textView20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgBttn_Starter"
        android:layout_alignTop="@+id/imgBttn_Ingredients"
        android:layout_toRightOf="@+id/imgBttn_Ingredients"
        android:layout_toEndOf="@+id/imgBttn_Ingredients" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgBttn_Main"
        android:layout_alignTop="@+id/imgBttn_Starter"
        android:layout_toRightOf="@+id/imgBttn_Starter"
        android:layout_toEndOf="@+id/imgBttn_Starter" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton13"
        android:layout_alignTop="@+id/imgBttn_Main"
        android:layout_toRightOf="@+id/textView20"
        android:layout_toEndOf="@+id/textView20"
        android:src="imgBttn_Dessert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ingredients"
        android:id="@+id/textView22"
        android:layout_below="@+id/imgBttn_Ingredients"
        android:layout_alignLeft="@+id/imgBttn_Ingredients"
        android:layout_alignStart="@+id/imgBttn_Ingredients" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Instructions"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView20"
        android:layout_toRightOf="@+id/imgBttn_Starter"
        android:layout_toEndOf="@+id/imgBttn_Starter"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dish 1"
        android:id="@+id/textView24"
        android:layout_below="@+id/imgBttn_Starter"
        android:layout_toRightOf="@+id/imgBttn_Ingredients"
        android:layout_toEndOf="@+id/imgBttn_Ingredients" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dish 2"
        android:id="@+id/textView25"
        android:layout_below="@+id/imgBttn_Main"
        android:layout_toRightOf="@+id/imgBttn_Starter"
        android:layout_toEndOf="@+id/imgBttn_Starter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dish 3"
        android:id="@+id/textView26"
        android:layout_below="@+id/imageButton13"
        android:layout_alignLeft="@+id/imageButton13"
        android:layout_alignStart="@+id/imageButton13" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title (Ingredients/Course)"
        android:id="@+id/txtBox_Title"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:id="@+id/txtBox_content"
        android:layout_below="@+id/txtBox_Title"
        android:layout_alignLeft="@+id/txtBox_Title"
        android:layout_alignStart="@+id/txtBox_Title"
        android:layout_marginTop="26dp"
        android:layout_alignRight="@+id/textView26"
        android:layout_alignEnd="@+id/textView26" />

</RelativeLayout>
